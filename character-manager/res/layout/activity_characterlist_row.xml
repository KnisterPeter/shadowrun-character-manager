<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/characterlist_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/characterlist_row_image"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="top|left"
        android:layout_margin="10dp"
        android:contentDescription="Character Image"
        android:src="@drawable/ic_launcher"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/characterlist_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Name (Race)"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/characterlist_row_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            android:text="Description"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>